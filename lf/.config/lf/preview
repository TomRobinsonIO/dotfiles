# 	thumbnail="$LF_UEBERZUG_TEMPDIR/thumbnail.png"
# 	ffmpeg -y -i "$file" -vframes 1 "$thumbnail"
# 	preview "$thumbnail" "$@"
# 	;;
# *.pdf)
# 	thumbnail="$LF_UEBERZUG_TEMPDIR/thumbnail.png"
# 	gs -o "$thumbnail" -sDEVICE=pngalpha -dLastPage=1 "$file" >/dev/null
# 	preview "$thumbnail" "$@"
# 	;;
# *.jpg|*.jpeg|*.png|*.bmp)
# 	preview "$file" "$@" ;;
# *.svg)
